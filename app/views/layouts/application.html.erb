<!DOCTYPE html>
<html>
  	<head>
  		<title><%= title %></title>
		<%= render 'layouts/stylesheets' %>
		<%= javascript_include_tag "jquery" %>
		<%= javascript_include_tag "jquery_ujs" %>
		<%= javascript_include_tag "application" %>
		<%= javascript_include_tag PUSH_SERVER_DRIVER %>
		<%= javascript_include_tag 'listeners' %>
		<%= csrf_meta_tag %>
	</head>
	<body>
		<div class="container">
			<%= render 'layouts/setup_listeners' %>
			<%= render 'layouts/header' %>
			<section class="round">
				<% flash.each do |key, value| %>
						<%= content_tag(
							:div, value,
							:class => "flash #{key}",
							:id => "flash_#{key}"
						) %>
				<% end %>
				<%= yield %>
			</section>
			<%= render 'layouts/footer' %>
			<%= debug(params) if Rails.env.development? %>
		</div>
	</body>
</html>
