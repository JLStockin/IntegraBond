
<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<strong>    -or- </strong> <%= f.label :phone %><br />
		<%= f.text_field :phone %>
	</div>
	<div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>
	<div class="actions">
		<%= f.submit "Sign in" %>
	</div>
<% end %>

<p>
	<span>New user?</span>
	<%= link_to(signup_path) do %>
		<span class="signup">  Sign up now.</span>
	<% end %>
</p>

